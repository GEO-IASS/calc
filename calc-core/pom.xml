	<artifactId>calc-core</artifactId>
	<packaging>jar</packaging>
	<name>Open Foris Calc Core</name>

	<properties>
		<jooq-codegen.target.directory>${project.build.directory}/generated-sources/jooq</jooq-codegen.target.directory>
		<jooq-codegen.target.packageName>org.openforis.calc.persistence.jooq</jooq-codegen.target.packageName>
	</properties>
		
	<build>
		<plugins>
			<!-- Read dev properties -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>properties-maven-plugin</artifactId>
				<version>1.0-alpha-2</version>
				<executions>
					<execution>
						<phase>generate-sources</phase>
						<goals>
							<goal>read-project-properties</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<files>
						<file>${basedir}/src/main/resources/dev.properties</file>
					</files>
					<quiet>true</quiet>
				</configuration>
			</plugin>
			<!-- Generate jOOQ stub classes -->
			<plugin>
				<groupId>org.jooq</groupId>
				<artifactId>jooq-codegen-maven</artifactId>
				<version>${jooq.version}</version>
				<executions>
					<execution>
						<goals>
							<goal>generate</goal>
						</goals>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>postgresql</groupId>
						<artifactId>postgresql</artifactId>
						<version>${postgres-driver.version}</version>
					</dependency>
				</dependencies>
				<configuration>
					<jdbc>
						<driver>${calc.jdbc.driver}</driver>
						<url>${calc.jdbc.url}</url>
						<user>${calc.jdbc.username}</user>
						<password>${calc.jdbc.password}</password>
					</jdbc>
					<generator>
						<database>
							<name>org.jooq.util.postgres.PostgresDatabase</name>
							<includes>.*</includes>
							<excludes />
							<inputSchema>calc</inputSchema>
<!-- 							  <customTypes> -->
<!-- 							    <customType> -->
<!-- 							      <name>java.awt.geom.Point2D.Double</name> -->
<!-- 							      <converter>org.openforis.calc.persistence.jooq.PGPointConverter</converter> -->
<!-- 							    </customType> -->
<!-- 							  </customTypes> -->
<!-- 							  <forcedTypes> -->
<!-- 							    <forcedType> -->
<!-- 							      <name>java.awt.geom.Point2D.Double</name> -->
<!-- 							      <expressions>.*\.location</expressions> -->
<!-- 							    </forcedType> -->
<!-- 							  </forcedTypes>							 -->
						</database>
						<generate>
							<relations>true</relations>
							<deprecated>false</deprecated>
							<pojos>true</pojos>
							<daos>false</daos>
						</generate>
						<target>
							<packageName>${jooq-codegen.target.packageName}</packageName>
							<directory>${jooq-codegen.target.directory}</directory>
						</target>
					</generator>
				</configuration>
			</plugin>
